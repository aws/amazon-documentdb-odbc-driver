<CPackWiXPatch>
	<CPackWiXFragment Id="CM_CP_Driver.bin.odfesqlodbc.dll">
		<!-- Add driver entry in Software -->
		<RegistryKey Root="HKLM" Key="SOFTWARE\Amazon\Amazon Timestream ODBC Driver\Driver" >
			<RegistryValue Type="string" Name="InstallPath" Value="[INSTALL_ROOT]" />
			<RegistryValue Type="string" Name="LogLevel" Value="" />
			<RegistryValue Type="string" Name="LogOutput" Value="" />
		</RegistryKey>
		
		<!-- Add driver entry in ODBC Drivers -->
		<RegistryKey Root="HKLM" Key="SOFTWARE\ODBC\ODBCINST.INI\ODBC Drivers" >
			<RegistryValue Type="string" Name="Amazon Timestream ODBC Driver" Value="Installed" />
		</RegistryKey>
		
		<!-- Set driver attributes -->
		<RegistryKey Root="HKLM" Key="SOFTWARE\ODBC\ODBCINST.INI\Amazon Timestream ODBC Driver" >
			<RegistryValue Type="string" Name="Driver" Value="[INSTALL_ROOT]bin\odfesqlodbc.dll" />
			<RegistryValue Type="string" Name="Setup" Value="[INSTALL_ROOT]bin\odfesqlodbc.dll" />
		</RegistryKey>
		
		<!-- Add DSN entry in ODBC Data Sources -->
		<RegistryKey Root="HKLM" Key="SOFTWARE\ODBC\ODBC.INI\ODBC Data Sources">
			<RegistryValue Type="string" Name="Amazon Timestream ODBC DSN" Value="Amazon Timestream ODBC Driver" />
		</RegistryKey>
		
		<!-- Set DSN attributes -->
		<RegistryKey Root="HKLM" Key="SOFTWARE\ODBC\ODBC.INI\Amazon Timestream ODBC DSN"  >
			<RegistryValue Type="string" Name="Driver" Value="[INSTALL_ROOT]bin\odfesqlodbc.dll" />
			<RegistryValue Type="string" Name="Auth" Value="AWS_PROFILE" />
			<RegistryValue Type="string" Name="Region" Value="us-east-1" />
			<RegistryValue Type="string" Name="ConnectionTimeout" Value="1000" />
			<RegistryValue Type="string" Name="RequestTimeout" Value="3000" />
			<RegistryValue Type="string" Name="MaxConnections" Value="25" />
			<RegistryValue Type="string" Name="LogLevel" Value="0" />
      <RegistryValue Type="string" Name="LogOutput" Value="" />
		</RegistryKey>

	</CPackWiXFragment>
</CPackWiXPatch>